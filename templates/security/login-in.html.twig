  {% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="background-sign-in">
{% include 'navbar.html.twig' %}

<div class="uk-child-width-1-1@m uk-grid-small uk-grid-match uk-flex uk-flex-center uk-position uk-position-center uk-text-center " uk-grid>
        <div class="uk-card uk-card-secondary uk-card-body uk-border-rounded ">
           <form method="post">
  
  <h1 class="h3 mb-3 font-weight-normal uk-margin-small-left"> Connectez vous </h1>
  {% for message in app.flashes('acccr') %}
            {{ message }}
        {% endfor %}<br>
    <label for="inputEmail">Email</label><br>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control uk-margin-small-bottom uk-margin-small-top uk-input uk-form-width-medium" autocomplete="email" required autofocus><br>
    <label for="inputPassword">Password</label><br>
    <input type="password" name="password" id="inputPassword" class="form-control uk-margin-small-top uk-margin-small-bottom uk-input uk-form-width-medium" autocomplete="current-password" required><br>
     <a href="{{ path('registration') }}">inscription</a>
     <a href="{{ path('app_forgot_password_request') }}">récupérer son mot de passe </a><br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="uk-button uk-button-default uk-margin-small-top" type="submit">Valider</button>
</form>
        </div>
    </div>
</div>
</div>
{% endblock %}
